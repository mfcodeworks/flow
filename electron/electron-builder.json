{
    "productName": "Flow",
    "appId": "com.ulfurmoon.flow",
    "releaseInfo": {
        "releaseName": "Flow"
    },
    "directories": {
        "output": "release/",
        "buildResources": "app/assets/res/"
    },
    "files": [
        "app",
        "!app/stats.json",
        "capacitor.config.json",
        "preload.js",
        "index.js",
        "splash_assets"
    ],
    "win": {
        "target": [
            "nsis"
        ],
        "icon": "app/assets/res/icon.png"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowElevation": true,
        "allowToChangeInstallationDirectory": true
    },
    "mac": {
        "icon": "app/assets/res/icon.png",
        "target": [
            "dmg"
        ],
        "darkModeSupport": true
    },
    "linux": {
        "icon": "app/assets/res/icon.png",
        "target": [
            "deb"
        ],
        "category": "Office"
    }
}